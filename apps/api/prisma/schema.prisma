generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  bankAccounts  BankAccount[]
  transactions  Transaction[]
  categoryRules CategoryRule[]
  pipelineRuns  PipelineRun[]
  syncState     FinanceSyncState?
  manualFinanceProfile ManualFinanceProfile?
  insightsDocs  InsightsDoc[]
  insightsSystemPrompt String? @db.Text @map("insights_system_prompt")

  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  oauth_token_secret String? @db.Text
  oauth_token        String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BankAccount {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  akahuId     String   @map("akahu_id")
  name        String
  institution String?
  type        String?
  status      String?
  currency    String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, akahuId])
  @@index([userId])
  @@map("bank_accounts")
}

model Transaction {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  akahuId        String   @map("akahu_id")
  date           DateTime
  accountName    String   @map("account_name")
  amount         Float
  balance        Float?
  descriptionRaw String   @map("description_raw")
  merchantName   String   @map("merchant_name")
  category       String
  categoryType   String   @map("category_type")
  isTransfer     Boolean  @default(false) @map("is_transfer")
  source         String
  importedAt     DateTime @default(now()) @map("imported_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, akahuId])
  @@index([userId, date])
  @@map("transactions")
}

model CategoryRule {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  pattern         String
  field           String
  category        String
  categoryType    String   @map("category_type")
  priority        Int
  amountCondition String?  @map("amount_condition")
  isDisabled      Boolean  @default(false) @map("is_disabled")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, priority])
  @@map("category_rules")
}

model FinanceSyncState {
  userId       String   @id @map("user_id")
  lastSyncedAt DateTime? @map("last_synced_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("finance_sync_state")
}

model PipelineRun {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  createdAt     DateTime @default(now()) @map("created_at")
  metricsPack   Json     @map("metrics_pack")
  processedCount Int     @map("processed_count")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  insightsDocs InsightsDoc[]

  @@index([userId, createdAt])
  @@map("pipeline_runs")
}

model ManualFinanceProfile {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  data      Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("manual_finance_profiles")
}

model InsightsDoc {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  createdAt    DateTime @default(now()) @map("created_at")
  markdown     String
  diffFromPrev String?  @map("diff_from_prev")
  metricsPack  Json?    @map("metrics_pack")

  pipelineRunId String?     @map("pipeline_run_id")
  pipelineRun   PipelineRun? @relation(fields: [pipelineRunId], references: [id], onDelete: SetNull)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([pipelineRunId])
  @@map("insights_docs")
}
